<Project Sdk="Godot.NET.Sdk/4.4.1">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Required for Godot 4 -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <!-- Disable NativeAOT, it breaks Windows exports. -->
    <PublishAOT>false</PublishAOT>
    <LangVersion>12.0</LangVersion>
    <!-- Keep these mobile language limitations here for future reference, auto-generated by Godot. -->
    <!-- Enforce nullable warnings -->
    <Nullable>enable</Nullable>
    <!-- Disable invalid/incompatible GodotSharp version warnings -->
    <NoWarn>NU1605</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <!-- Root the assemblies to avoid trimming. -->
    <TrimmerRootAssembly Include="GodotSharp" />
    <TrimmerRootAssembly Include="$(TargetName)" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NLog" Version="5.3.2" />
    <None Include="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Content Include="Scenes\Boot.tscn" />
  </ItemGroup>
</Project>
